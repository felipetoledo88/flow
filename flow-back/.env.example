# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# CONFIGURAÇÕES JWT
# ========================================
# IMPORTANTE: Troque esta chave em produção!
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ========================================
# CONFIGURAÇÕES CORS
# ========================================
CORS_ORIGIN=http://localhost:3019

# ========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ========================================

# AMBIENTE LOCAL (Docker Compose)
# Use estas configurações para desenvolvimento local
# O Docker Compose expõe o PostgreSQL na porta 5444
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=nx_flow_localhost

# AMBIENTE HOMOLOGAÇÃO
# Para conectar ao servidor de homologação, comente as linhas acima e use:
# DATABASE_HOST=186.206.0.191
# DATABASE_PORT=5444
# DATABASE_USER=postgres
# DATABASE_PASSWORD=postgres
# DATABASE_NAME=nx_flow

# ========================================
# CONFIGURAÇÕES DE IA
# ========================================
# Chave da API do OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=debug